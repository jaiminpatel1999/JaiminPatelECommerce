@model JaiminPatelECommerce.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="hero bg-base-200 text-center py-12">
    <div class="hero-content">
        <div>
            <h1 class="text-5xl font-bold">Thank you for your order!</h1>
            <p class="py-6 text-xl">Your order number is <strong>@Model.OrderId</strong>.</p>
            <hr class="my-4 border-t-2">
            <p class="text-lg">We have received your order and are processing it. You will receive a confirmation email shortly.</p>
            <a class="btn btn-primary btn-lg mt-6" href="@Url.Action("Index", "Home")" role="button">Continue Shopping</a>
        </div>
    </div>
</div>

<div class="mt-12">
    <h4 class="text-2xl font-semibold mb-4">Order Details</h4>
    <ul class="list-group">
        @foreach (var item in Model.OrderItems)
        {
            <li class="list-group-item flex justify-between items-center">
                <span>@item.Product.Name</span>
                <span class="badge badge-primary badge-pill">@item.Quantity x @item.UnitPrice.ToString("C")</span>
            </li>
        }
    </ul>
    <h4 class="text-xl font-semibold mt-6">Total: @Model.TotalAmount.ToString("C")</h4>
</div>
