@model JaiminPatelECommerce.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2 class="text-3xl font-semibold mb-6">Delete Product</h2>

<div class="alert alert-error mb-6">
    Are you sure you want to delete this product?
</div>

<h4 class="text-xl font-bold">@Model.Name</h4>
<p class="mb-4">@Model.Description</p>
<p class="mb-4"><strong>Price: @Model.Price.ToString("C")</strong></p>

<form asp-action="Delete" method="post" class="space-y-4">
    <input type="hidden" asp-for="ProductId" />
    <div>
        <button type="submit" class="btn btn-error">Delete</button>
        <a href="@Url.Action("Index", "Product")" class="btn btn-secondary ml-2">Cancel</a>
    </div>
</form>
