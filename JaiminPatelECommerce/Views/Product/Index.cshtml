@model IEnumerable<JaiminPatelECommerce.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h2 class="text-3xl font-semibold mb-6">Products</h2>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    @foreach (var product in Model)
    {
        <div class="card shadow-lg">
            <figure><img src="@product.ImageUrl" alt="@product.Name" class="object-cover h-48 w-full" /></figure>
            <div class="card-body">
                <h5 class="card-title text-xl font-bold">@product.Name</h5>
                <p class="card-text">
                    @if (product.Description.Length > 100)
                    {
                        @product.Description.Substring(0, 100)
                    }
                    else
                    {
                        @product.Description
                    }
                </p>
                <p class="card-text font-semibold text-lg">@product.Price.ToString("C")</p>
                <div class="card-actions justify-end">
                    <a href="@Url.Action("Details", "Product", new { id = product.ProductId })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
