@model JaiminPatelECommerce.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2 class="text-3xl font-semibold mb-6">Delete Product</h2>

<div class="alert alert-error mb-6">
    Are you sure you want to delete this product? This action cannot be undone.
</div>

<div class="card shadow-lg p-6 mb-6">
    <h4 class="text-2xl font-bold">@Model.Name</h4>
    <p class="text-gray-700 mb-4">@Model.Description</p>
    <p class="text-lg font-semibold">Price: @Model.Price.ToString("C")</p>
</div>

<form asp-action="DeleteProductConfirmed" method="post" class="flex justify-between">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-error">Delete</button>
    <a href="@Url.Action("ManageProducts", "Admin")" class="btn btn-secondary">Cancel</a>
</form>
