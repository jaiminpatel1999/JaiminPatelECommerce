@model JaiminPatelECommerce.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2 class="text-3xl font-semibold mb-6">Login</h2>

<div asp-validation-summary="ModelOnly" class="alert alert-error mb-4"></div>

<form asp-action="Login" method="post" class="space-y-4">
    <div class="form-control">
        <label asp-for="Email" class="label">
            <span class="label-text">@Html.DisplayNameFor(model => model.Email)</span>
        </label>
        <input asp-for="Email" class="input input-bordered" />
        <span asp-validation-for="Email" class="text-error"></span>
    </div>
    <div class="form-control">
        <label asp-for="Password" class="label">
            <span class="label-text">@Html.DisplayNameFor(model => model.Password)</span>
        </label>
        <input asp-for="Password" class="input input-bordered" type="password" />
        <span asp-validation-for="Password" class="text-error"></span>
    </div>
    <div class="form-control">
        <label class="cursor-pointer flex items-center space-x-2">
            <input asp-for="RememberMe" class="checkbox checkbox-primary" />
            <span class="label-text">@Html.DisplayNameFor(model => model.RememberMe)</span>
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
